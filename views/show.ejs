<!doctype html>
<head>
    <%- include partials/head.ejs %>

</head>
<body>
    <div id="maincontainer">
        <%-include partials/header.ejs %>
        <div id="body">
            <div id="container">
                <div class="row">
                    <div class="sixcol">
                        <%- include partials/showhead.ejs %>
                    </div>
                    <div class="sixcol last">
                        <% include partials/showedit.ejs %>
                    </div>
                </div>
                <div class="row">
                    <div class="ninecol">
                        <div id="map">
                            <div id="mymap"></div>
                        </div>
                    </div>
                    <div class="threecol last">
                        <div style="margin-top: 10px"><b>Places</b></div>
                        <ul id="desclist" class="showlist"></ul>
                    </div>
                </div>
                <%-include partials/favourite.ejs %>
                <div class="row">
                    <div class="fourcol">

                        <% if (map.description) { %>
                            <div><b>Description</b></div>
                            <div><p><%= map.description %></p></div>
                        <% } %>

                        <% if (map.tags) { %>
                            <div id="showtags"><b>Tags</b></div>
                            <ul id="maptags">
                            <% map.tags.forEach(function(tag){ %>
                                <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
                             <% }) %>
                            </ul>
                        <% } %>
                    </div>
                    <div class="fourcol last">
                        <% if (map.images.length) { %>
                            <div class="imageHeader"><b>Images</b></div>
                            <% map.images.forEach(function(image){ %>
                                <span><a href="<%=image.mainurl %>"><img class="thumbnail" src="<%= image.thumburl %>"></a></span>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="clearfooter"></div>
        </div>
        <div id="footer"></div>
    </div>
</body>
</html>
<script>
    var map;
    var arrayofwaypoints = [];
    var infowindow = new google.maps.InfoWindow();
    var jmap = <%- jmap %>;
    
    function favouritePost() {
        var obj = {
            favourite: jmap._id,
            plusone: jmap.favourited + 1
        };
    
        $.ajax({
            url: "/show",
            type: "POST",
            contentType: "application/json",
            processData: false,
            data: JSON.stringify(obj),
            complete: function(data) {
                $('#result').append().html(data.responseText);    
            }
        });
    };
    
    function placeMarker(location, descriptions) {
      var newmarker = new google.maps.Marker({
          position: location,
          map: map,
          flat: true
          });

        google.maps.event.addListener(newmarker, 'click', function() {
        infowindow.setContent(descriptions)
        infowindow.open(map, newmarker);
        }); 
    
        $("<li>").html(descriptions + "</li>").click(function(){
            infowindow.setContent(descriptions);
            infowindow.open(map, newmarker); 
        }).appendTo("#desclist");
    };
    
    function create_blankmap(){
    
    var mapOptions = {
        center: new google.maps.LatLng(jmap.waypoints[0].lat, jmap.waypoints[0].lon),
        zoom: 13,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        mapTypeControlOptions: {
             mapTypeIds: [google.maps.MapTypeId.ROADMAP, google.maps.MapTypeId.SATELLITE]
        },
        panControl: false,
        zoomControl: false,
        scaleControl: false,
        zoomControl: true,
        zoomControlOptions: {
          style: google.maps.ZoomControlStyle.SMALL
        },
        streetViewControl: true
        };
       
    map = new google.maps.Map(document.getElementById("mymap"), mapOptions);
    bounds = new google.maps.LatLngBounds();
    
    // loop through markers and add to map
    
    for ( var i = 0, j = jmap.places.length; i < j; i++ ) {
      var marker = new google.maps.LatLng(jmap.places[i].lat, jmap.places[i].lon);
        bounds.extend(marker);
        var descs = jmap.markerdescs[i];
        placeMarker(marker, descs);
    };
    
    // loop through waypoints and add to array of waypoints which is then added to map
    
    for ( var i = 0, j = jmap.waypoints.length; i < j; i++) {
        var x = new google.maps.LatLng(jmap.waypoints[i].lat, jmap.waypoints[i].lon);
        arrayofwaypoints.push(x);
        bounds.extend(x);
      };
    
    // add polyline to map
    var lineSymbol = {
      path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
    };
    
    var route = new google.maps.Polyline({
        path: arrayofwaypoints,
        strokeOpacity: 0.7,
        strokeWeight: 3,
        strokeColor: '#FF0000',
        icons: [{
        icon: lineSymbol,
        offset: '0',
        repeat: '150px'
      }],
      });
    route.setMap(map);
    map.fitBounds(bounds);

    // end of create blankmap function
    
    };
    
    $(document).ready(function () {
    create_blankmap();
    
    $('#favourite').click(function() { 
        favouritePost();
        });
    });
    
</script>